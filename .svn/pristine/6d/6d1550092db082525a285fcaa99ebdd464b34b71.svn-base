//获取区域信息
function getArea(){
	$.ajax({
		url:'../area/getAreaList.action',
		type:'get',
		dataType:'json',
		success:function(obj){
			if(obj.status==true){
				var data = obj.data;
				$("#area").empty();
				$("#area").append("<option value='' selected>请选择</option>")
				for(var i=0;i<data.length;i++){
					$("#area").append("<option value='"+data[i].areaId+"'>"+data[i].areaname+"</option>")
				}
			}
		},
		error:function(){}
	})
}

